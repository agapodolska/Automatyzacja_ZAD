<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1">
    <parameter name="browserType" value="firefox" /> <!-- chrome / firefox -->
    <parameter name="implicitlyWait" value="15" /> <!-- INT -->
    <parameter name="windowMaximize" value="true" /> <!-- true / false -->
    <parameter name="screenshot" value="true" /> <!-- true / false -->
    <test name="Regression1">
        <classes>
            <class name="selenium.uj.project.tests.LoginTest"/>
            <class name="selenium.uj.project.tests.DashboardPageTest"/>
            <class name="selenium.uj.project.tests.AddMainPageTest"/>
            <class name="selenium.uj.project.tests.AddNotesPageTest"/>
            <class name="selenium.uj.project.tests.PublishNotesPageTest"/>
         </classes>
     </test>
 </suite>